    "target": "ES2017",
    "module": "ES6",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./app/html.d.ts"
    ],
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "outDir" :"tmp",
    "moduleResolution": "node"
  },
  "include": ["service"],
  "files": [
    "./node_modules/@types/mocha/index.d.ts",
    "./node_modules/@types/node/index.d.ts"
